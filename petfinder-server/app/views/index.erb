<h1>Pets</h1>

<ul>
  <% @pets.each do |pet| %>
    <li>
      <h3><%= pet.name %></h3>
      <p>Breed: <%= pet.breed %></p>
      <p>Age: <%= pet.age %></p>
      <% if pet.img_url.present? %>
        <img src="<%= pet.img_url %>" alt="<%= pet.name %>" style="width: 300px; height: 300px;">
      <% end %>
    </li>
  <% end %>
</ul>